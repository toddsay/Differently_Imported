{
    "update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 2,

    "name": "Differently Imported+",
    "description": "Differently Imported+: addictive electronic music player for Di.Fm and sister stations",
    "version": "4.3.70.2",
    "permissions": [
        "storage",
        "http://*.audioaddict.com/*",
        "http://*.di.fm/*",
        "http://*.radiotunes.com/*",
        "http://*.rockradio.com/*",
        "http://*.jazzradio.com/*",
        "http://*.classicalradio.com/*"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "browser_action": {
        "default_icon": "di.png",
        "default_popup": "popup.html"
    },
    "background": {
        "page": "player.html",
        "persistent": true
    },
    "icons": {
        "128": "di.png"
    },
    "commands": {
        "toggle-play": {
            "suggested_key": {
                "default": "Ctrl+Shift+1",
                "windows": "Ctrl+Shift+1",
                "mac": "Command+Shift+1",
                "chromeos": "Ctrl+Shift+1",
                "linux": "Ctrl+Shift+1"
            },
            "description": "Play / Pause DI.",
            "global": true
        }
    }
}